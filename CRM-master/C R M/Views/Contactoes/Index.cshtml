    <div class="container">
        <h2>Contactos</h2>
        <p>
            <a href="@Url.Action("Create")" class="btn btn-success"><i class="fa fa-plus-circle"></i> Crear Nuevo</a>
        </p>
        <br />
        <div style="width:90%; margin:0 auto;">
            <table id="demoGrid" class="table table-striped table-bordered dt-responsive nowrap" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Id_Contacto</th>
                        <th>Nombre</th>
                        <th>1º Apellido</th>
                        <th>2º Apellido</th>
                        <th>Puesto</th>
                        <th>Empresa</th>
                        <th>Telefonos</th>
                        <th>Correos</th>
                        <th>Opciones</th>
                    </tr>
                </thead>
            </table>
        </div>
    </div>

@section scripts{
    @Scripts.Render("~/bundles/datatables")
    <script>
        $(document).ready(function () {
            $("#demoGrid").DataTable({
                "language": {
                    "url": "@Url.Content("/Resources/Spanish.json")"
                },
                "processing": true, // for show progress bar
                "serverSide": true, // for process server side
                "filter": true, // this is for disable filter (search box)
                "orderMulti": false, // for disable multiple column at once
                "pageLength": 5,

                "ajax": {
                    "url": "/Contactoes/LoadData",
                    "type": "POST",
                    "datatype": "json"
                },

                "columnDefs":
                    [{
                        "targets": [0],
                        "visible": false,
                        "sortable": false,
                        "searchable": false
                    }, {
                            "targets": [6],
                            "visible": true,
                            "sortable": false,
                            "searchable": false
                        }, {
                            "targets": [7],
                            "visible": true,
                            "sortable": false,
                            "searchable": false
                        }, {
                            "targets": [8],
                            "visible": true,
                            "sortable": false,
                            "searchable": false
                        }],

                "columns": [
                    { "data": "Id_Contacto", "name": "Id_Contacto", "autoWidth": true },
                    { "data": "Nombre", "name": "Nombre", "autoWidth": true },
                    { "data": "Apellido1", "name": "Apellido1", "autoWidth": true },
                    { "data": "Apellido2", "name": "Apellido2", "autoWidth": true },
                    { "data": "Puesto", "name": "Puesto", "autoWidth": true },
                    { "data": "Empresa.Nombre", "name": "Empresa.Nombre", "autoWidth": true },
                    {
                        "render": function (data, type, full, meta) {
                            if (full.Telefono.length < 1) return "No registrado";
                            let salida = `<select class="form-control" id="Id_Telefono" name="Telefonos">`;
                            for (var i = 0; i < full.Telefono.length; i++) {
                                salida += `<option value="${i}">${full.Telefono[i].Codigo} - ${full.Telefono[i].N_Telefonico}</option>`;
                            }
                            salida += `</select>`;
                            return salida;
                        }
                    },
                    {
                        "render": function (data, type, full, meta) {
                            if (full.Correo.length < 1) return "No registrado";
                            let salida = `<select class="form-control " id="Id_Correo" name="Correos">`;
                            for (var i = 0; i < full.Correo.length; i++) {
                                salida += `<option value="${i}">${full.Correo[i].Direccion}</option>`;
                            }
                            salida += `</select>`;
                            return salida;
                        }
                    },
                    {
                        "render": function (data, type, full, meta) {
                            return '<a class="btn btn-info ml-1" href="/Contactoes/Details/' + full.Id_Contacto + '"><i class="fa fa-info-circle"></i></a><a class="btn btn-success ml-1" href="/Contactoes/Edit/' + full.Id_Contacto + '"><i class="fa fa-edit  fa-lg"></i></a><a class="btn btn-danger ml-1" href="/Contactoes/Delete/' + full.Id_Contacto + '"><i class="fa fa-trash fa-lg"></i></a>';
                        }
                    }
                ]

            });
        });</script>
}