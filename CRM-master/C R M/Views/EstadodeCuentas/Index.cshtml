@model IEnumerable<C_R_M.Models.EstadodeCuenta>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Estados de cuenta de empresas</h2>

<p>
    <a href="@Url.Action("Create")" class="btn btn-success"><i class="fa fa-plus-circle"></i> Crear Nuevo</a>
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Credito_Disponible)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Empresa.Nombre)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Credito_Disponible)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Empresa.Nombre)
        </td>
        <td>
            <a class="btn btn-success ml-1" href="@Url.Action("Edit")/@item.Id_Empresa"><i class="fa fa-edit  fa-lg"></i></a>
            <a class="btn btn-info ml-1" href="@Url.Action("Details")/@item.Id_Empresa"><i class="fa fa-info-circle"></i></a>
            <a class="btn btn-danger ml-1" href="@Url.Action("Delete")/@item.Id_Empresa"><i class="fa fa-trash fa-lg"></i></a>
            @*@Html.ActionLink("Editar", "Edit", new { id = item.Id_Empresa }) |
            @Html.ActionLink("Detalles", "Details", new { id = item.Id_Empresa }) |
            @Html.ActionLink("Borrar", "Delete", new { id = item.Id_Empresa })*@
        </td>
    </tr>
}

</table>
