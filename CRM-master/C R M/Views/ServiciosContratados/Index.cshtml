@model IEnumerable<C_R_M.Models.ServicioEmpresa>
@using C_R_M.Models;
@using C_R_M.Controllers;
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Lista de servicios contratados</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Descripcion)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Fecha_Creacion)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Primer_Pago)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Renovacion)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Precio)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Empresa.Nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Producto.Nombre)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Descripcion)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Fecha_Creacion)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Primer_Pago)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Renovacion)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Precio)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Empresa.Nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Producto.Nombre)
        </td>
        <td>
            <a class="btn btn-info ml-1" href="@Url.Action("Details")/@item.Id_Servicio_Empresa"><i class="fa fa-info-circle"></i></a>
            @if (FrontUser.TienePermiso("Cuentas-Index", RolesPermisos.Permiso))
            {
                <a class="btn btn-info ml-1" href="/Cuentas/Index/@item.Id_Servicio_Empresa?tipo=@TipoConsulta.InternaCuenta"> Ver Cuentas</a>
            }
        </td>
    </tr>
}

</table>
