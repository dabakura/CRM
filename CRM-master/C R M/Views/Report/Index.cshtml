
@using ReportViewerForMvc
@{
    ViewBag.Title = "Reportes de Ventas";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section Styles{
    @Styles.Render("~/Content/css-datatables")
    <style>
        table {
            width: 100%;
        }
    </style>
}
<h2 class="display-1">Reportes de Ventas</h2>

@using (Html.BeginForm())
{
    <div class="form-inline">
        <br />
        <div class="form-group">
            @Html.Label("Seleccione un servicio", htmlAttributes: new { @class = "control-label col-md-12" })
            <br />
            <div class="col-sm-12">
                @Html.DropDownList("Id_Servicio_Empresa", (IEnumerable<SelectListItem>)ViewBag.Servicios, "Seleccione", new { @class = "form-control small" })
                <input type="submit" value="Buscar" class="btn btn-primary" />
            </div>
        </div>
    </div>
}

<hr />
@Html.ReportViewer(ViewBag.ReportViewer as Microsoft.Reporting.WebForms.ReportViewer, htmlAttributes: new { @class = "col-sm-12" })
