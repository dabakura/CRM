@model C_R_M.Models.Publicidad

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Editar</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Publicidad</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id_Publicidad)

        <div class="form-group">
            @Html.LabelFor(model => model.Medio, "Medio", htmlAttributes: new { @class = "control-label col-md-2" })
