@model IEnumerable<C_R_M.Models.Publicidad>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Publicidad</h2>

<p>
    <a href="@Url.Action("Create")" class="btn btn-success"><i class="fa fa-plus-circle"></i> Crear Nuevo</a>
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayName("Empresa")
        </th>
        <th>
            @Html.DisplayName("Medio Publicitario")
        </th>
        <th>
            @Html.DisplayName("Fecha Inicio")
        </th>
        <th>
            @Html.DisplayName("Fecha Caducidad")
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Costo)
        </th>

        <th>
            @Html.DisplayName("Credito Disponible")
        </th>

        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Empresa.Nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MedioPublicitario.Nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Fecha_Inicio)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Fecha_Caducidad)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Costo)
        </td>

        <td>
            @Html.DisplayFor(modelItem => item.Empresa.EstadodeCuenta.Credito_Disponible)
        </td>
        <td>
            <a class="btn btn-success ml-1" href="@Url.Action("Edit")/@item.Id_Publicidad"><i class="fa fa-edit  fa-lg"></i></a>
            <a class="btn btn-info ml-1" href="@Url.Action("Details")/@item.Id_Publicidad"><i class="fa fa-info-circle"></i></a>
            <a class="btn btn-danger ml-1" href="@Url.Action("Delete")/@item.Id_Publicidad"><i class="fa fa-trash fa-lg"></i></a>
            @*@Html.ActionLink("Editar", "Edit", new { id = item.Id_Publicidad }) |
            @Html.ActionLink("Detalles", "Details", new { id = item.Id_Publicidad }) |
            @Html.ActionLink("Borrar", "Delete", new { id = item.Id_Publicidad })*@
        </td>
    </tr>
}

</table>
