@model IEnumerable<C_R_M.Models.MedioPublicitario>

@{
    ViewBag.Title = "Lista";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Lista de Medios Publicitarios</h2>

<p>
    <a href="@Url.Action("Create")" class="btn btn-success"><i class="fa fa-plus-circle"></i> Crear Nuevo</a>
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nombre)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Nombre)
        </td>
        <td>
            <a class="btn btn-success ml-1" href="@Url.Action("Edit")/@item.Id_Medio_Publicitario"><i class="fa fa-edit  fa-lg"></i></a>
            <a class="btn btn-info ml-1" href="@Url.Action("Details")/@item.Id_Medio_Publicitario"><i class="fa fa-info-circle"></i></a>
            <a class="btn btn-danger ml-1" href="@Url.Action("Delete")/@item.Id_Medio_Publicitario"><i class="fa fa-trash fa-lg"></i></a>
            @*@Html.ActionLink("Editar", "Edit", new { id = item.Id_Medio_Publicitario }) |
            @Html.ActionLink("Detalle", "Details", new { id = item.Id_Medio_Publicitario }) |
            @Html.ActionLink("Eliminar", "Delete", new { id = item.Id_Medio_Publicitario })*@
        </td>
    </tr>
}

</table>
