@model IEnumerable<C_R_M.Models.ServicioEmpresa>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutVacio.cshtml";
}

<h2>Servicios</h2>
<p>
    @Html.ActionLink("Crear Nuevo", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Producto.Nombre)
        </th>
        <th>
            @Html.DisplayName("Descripción")
        </th>
        <th>
            @Html.DisplayName("Fecha Creación")
        </th>
        <th>
            @Html.DisplayName("Primer Pago")
        </th>
        <th>
            @Html.DisplayName("Renovación")
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Precio)
        </th>

        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Producto.Nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Descripcion)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Fecha_Creacion)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Primer_Pago)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Renovacion)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Precio)
        </td>

        <td>
            @Html.ActionLink("Editar", "Edit", new { id = item.Id_Servicio_Empresa }) |
            @Html.ActionLink("Detalles", "Details", new { id = item.Id_Servicio_Empresa }) |
            @Html.ActionLink("Borrar", "Delete", new { id = item.Id_Servicio_Empresa })
        </td>
    </tr>
}

</table>
